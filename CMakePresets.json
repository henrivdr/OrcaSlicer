{
    "version": 8,
    "configurePresets": [
        {
            "name": "linux-debug-config",
            "displayName": "Configure Debug preset",
            "description": "",
            "generator": "Ninja",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BBL_INTERNAL_TESTING": "1",
                "CMAKE_PREFIX_PATH": "${workspaceFolder}/deps/build/destdir/usr/local",
                "SLIC3R_STATIC": "1",
                "ORCA_TOOLS": "ON",
                "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/OrcaSlicer",
                "ORCA_CHECK_GCODE_PLACEHOLDERS": "0",
                "SLIC3R_GTK": "3"
            }
        },
        {
            "name": "linux-RelWithDebInfo-config",
            "displayName": "Configure RelWithDebInfo preset",
            "description": "",
            "generator": "Ninja",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BBL_INTERNAL_TESTING": "1",
                "CMAKE_PREFIX_PATH": "${workspaceFolder}/deps/build/destdir/usr/local",
                "SLIC3R_STATIC": "1",
                "ORCA_TOOLS": "ON",
                "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/OrcaSlicer",
                "ORCA_CHECK_GCODE_PLACEHOLDERS": "0",
                "SLIC3R_GTK": "3"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug-build",
            "displayName": "Build preset - Debug",
            "description": "",
            "configurePreset": "linux-debug-config",
            "cleanFirst": false,
            "targets": [
                "OrcaSlicer"
            ]
        },
        {
            "name": "linux-RelWithDebInfo-build",
            "displayName": "Build preset - RelWithDebInfo",
            "description": "",
            "configurePreset": "linux-RelWithDebInfo-config",
            "cleanFirst": false,
            "targets": [
                "OrcaSlicer"
            ]
        },
        {
            "name": "linux-RelWithDebInfo-build-profile-validator",
            "displayName": "Build preset profile-validator - RelWithDebInfo",
            "description": "",
            "configurePreset": "linux-RelWithDebInfo-config",
            "cleanFirst": false,
            "targets": [
                "OrcaSlicer_profile_validator"
            ]
        }
    ]
